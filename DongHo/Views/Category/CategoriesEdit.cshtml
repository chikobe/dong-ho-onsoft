@model DongHo.Models.Category
@{
    ViewBag.Title = "CategoriesEdit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>CategoriesEdit</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table class="TableUpdate" border="1">
        <tr>
            <td class="Control" colspan="2">
                <ul>
                    <li><input type="submit" value="Ghi lại" class="uupdate" /></li>
                    <li>@Html.ActionLink("Trở về", "CategoryIndex","", new { @class="uback"})</li>
                </ul>
            </td>
        </tr>
           <tr>
            <th>Tên loại sản phẩm</th>
            <td>@Html.TextBoxFor(model => model.Name, new { @class="text"})@Html.ValidationMessageFor(m=>m.Name)</td>
        </tr>
         <tr>
            <th>Hình ảnh</th>
            <td>@Html.TextBoxFor(model => model.Image, new { @class="text"})<input id="SelectImages" type="button" value="Chọn ảnh" class="bottom" /></td>
        </tr>
        <tr>
            <th>Nội dung</th>
            <td>@Html.TextArea("Content")</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>@Html.TextBoxFor(model => model.Title, new { @class="text"})</td>
        </tr>
        <tr>
            <th>Miêu tả</th>
             <td>@Html.TextBoxFor(model => model.Description, new { @class="text"})</td>
        </tr>
        <tr>
            <th>Từ khóa</th>
              <td>@Html.TextBoxFor(model => model.Keyword, new { @class="text"})</td>
        </tr>
          <tr>
            <th>Thứ tự</th>
              <td>@Html.TextBoxFor(model => model.Ord, new { @onkeypress="OnlyInputNumber(0)"})@Html.ValidationMessageFor(m=>m.Ord)</td>
        </tr>
         <tr>
            <th>Nhóm trang chủ</th>
            <td>@Html.CheckBox("Indexs",(Model.Index==1)?true:false)</td>
        </tr>
        <tr>
            <th>Active</th>
            <td>@Html.CheckBox("Actives",(Model.Active==1)?true:false)</td>
        </tr>
         <tr>
            <td class="Control" colspan="2">
                <ul>
                    <li><input type="submit" value="Ghi lại" class="uupdate" /></li>
                    <li>@Html.ActionLink("Trở về", "CategoryIndex", new { @class="uback"})</li>
                </ul>
            </td>
        </tr>
        
      
    </table>
}
<script>
    $(function () {
        $("#SelectImages").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#Image").val(fileUrl);
            };
            finder.popup();
        });
    });
</script>

<script type="text/javascript">
    var editor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, {
            language: languageCode
        });
    }

    $(function () {
        createEditor('vi', 'Content');
    });
</script>