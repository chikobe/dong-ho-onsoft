@model DongHo.Models.Price
@{
    ViewBag.Title = "PricesEdit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chỉnh sửa khoảng giá</h2>
@using (Html.BeginForm())
{
    <table class="TableUpdate" border="1">
        <tr>
            <td class="Control" colspan="2">
                <ul>
                    @if (Session["Username"]!=null)
                    {
                        <li><input type="submit" value="Ghi lại "class="uupdate" /></li>
                    }
                    else{
                     <li><p class="uupdate" onclick="AlertErr()">Ghi lại</p></li>   
                    }
                    <li>@Html.ActionLink("Trở về", "PricesIndex","", new {@class="uback" })</li>
                </ul>
            </td>
        </tr>
        <tr>
            <th>Khoảng giá</th>
            <td>@Html.TextBoxFor(m=>m.Name)</td>
        </tr>
        <tr>
            <th>Giá từ - đến</th>
            <td>@Html.TextBoxFor(m=>m.PriceFrom, new { @onkeypress="OnlyInputNumber(0)"}) - @Html.TextBoxFor(m=>m.PriceTo, new { @onkeypress="OnlyInputNumber(0)"})</td>
        </tr>
        <tr>
            <th>Thứ tự</th>
            <td>@Html.TextBoxFor(m=>m.Ord, new { @onkeypress="OnlyInputNumber(0)"})</td>
        </tr>
        <tr>
            <td class="Control" colspan="2">
                <ul>
                    @if (Session["Username"]!=null)
                    {
                        <li><input type="submit" value="Ghi lại "class="uupdate" /></li>
                    }
                    else{
                     <li><p class="uupdate" onclick="AlertErr()">Ghi lại</p></li>   
                    }
                    <li>@Html.ActionLink("Trở về", "PricesIndex","", new {@class="uback" })</li>
                </ul>
            </td>
        </tr>
    </table>
}