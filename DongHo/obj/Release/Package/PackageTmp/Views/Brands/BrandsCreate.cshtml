@model DongHo.Models.BrandModel
@{
    ViewBag.Title = "Tạo mới thương hiệu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table class="TableUpdate" border="1">
        <tr>
            <td class="Control" colspan="2">
                <ul>
                    <li><input type="submit" value="Ghi lại" class="uupdate" /></li>
                    <li>@Html.ActionLink("Trở về", "BrandsIndex","", new { @class="uback"})</li>
                </ul>
            </td>
        </tr>
        <tr>
            <th>Nhà cung cấp</th>
            <td>@Html.DropDownList("Supplier"," === Chọn nhà cung cấp === ")</td>
        </tr>
        <tr>
            <th>Thương hiệu</th>
            <td>@Html.TextBoxFor(model => model.Name, new { @class="text"})@Html.ValidationMessageFor(m=>m.Name)</td>
        </tr>
         <tr>
            <th>Logo</th>
             <td>@Html.TextBoxFor(model => model.Logo, new { @class="text"})@Html.ValidationMessageFor(m=>m.Logo)<input id="SelectImages" type="button" value="Chọn ảnh" class="bottom" /></td>
        </tr>
       
        <tr>
            <th>Thứ tự</th>
            <td>@Html.TextBoxFor(model => model.Ord, new { @onkeypress="OnlyInputNumber(0)"})@Html.ValidationMessageFor(m=>m.Ord)</td>
        </tr>
        <tr>
            <td class="Control" colspan="2">
                <ul>
                    <li><input type="submit" value="Ghi lại" class="uupdate" /></li>
                    <li>@Html.ActionLink("Trở về", "BrandsIndex","", new { @class="uback"})</li>
                </ul>
            </td>
        </tr>
    </table>
}
<script>
    $(function () {
        $("#SelectImages").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#Image").val(fileUrl);
            };
            finder.popup();
        });
    });
</script>

<script type="text/javascript">
    var editor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, {
            language: languageCode
        });
    }

    $(function () {
        createEditor('vi', 'Content');
    });
</script>
