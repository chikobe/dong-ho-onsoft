@model DongHo.Models.Color
@{
    ViewBag.Title = "ColorEdit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chỉnh sửa thông tin màu sắc</h2>
@using(Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table class="TableUpdate" border="1">
        <tr>
            <td class="Control" colspan="2">
                <ul>
                    @if (Session["Username"]!=null)
                    {
                        <li><input type="submit" value="Ghi lại "class="uupdate" /></li>
                    }
                    else{
                     <li><p class="uupdate" onclick="AlertErr()">Ghi lại</p></li>   
                    }
                    <li>@Html.ActionLink("Trở về", "ColorIndex","", new {@class="uback" })</li>
                </ul>
            </td>
        </tr>
        <tr>
            <th>Màu</th>
            <td>
                 @Html.TextBoxFor(model => model.Name, new {@class="text" })
                 @Html.ValidationMessageFor(m => m.Name)
            </td>
        </tr>
        <tr>
            <th>Ảnh</th>
            <td>@Html.TextBoxFor(model => model.Img, new { @class="text"})@Html.ValidationMessageFor(m=>m.Img)<input id="SelectImages" type="button" value="Chọn ảnh" class="bottom" /></td>
        </tr>
     
         <tr>
            <td class="Control" colspan="2">
                <ul>
                    @if (Session["Username"]!=null)
                    {
                        <li><input type="submit" value="Ghi lại "class="uupdate" /></li>
                    }
                    else{
                     <li><p class="uupdate" onclick="AlertErr()">Ghi lại</p></li>   
                    }
                    <li>@Html.ActionLink("Trở về", "ColorIndex","", new {@class="uback" })</li>
                </ul>
            </td>
        </tr>
    </table>
}
<script>
    $(function () {
        $("#SelectImages").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#Img").val(fileUrl);
            };
            finder.popup();
        });
    });
</script>

<script type="text/javascript">
    var editor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, {
            language: languageCode
        });
    }

    $(function () {
        createEditor('vi', 'Content');
    });
</script>