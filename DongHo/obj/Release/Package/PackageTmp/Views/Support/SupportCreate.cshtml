@model DongHo.Models.Support
@{
    ViewBag.Title = "SupportCreate";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm mới hỗ trợ trực tuyến</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table class="TableUpdate" border="1">
        <tr>
            <td class="Control" colspan="2"> 
                <ul>
                    @if (Session["Username"]!=null)
                    {
                        <li><input type="submit" value="Ghi lại "class="uupdate" /></li>
                    }
                    else{
                     <li><p class="uupdate" onclick="AlertErr()">Ghi lại</p></li>   
                    }
                    <li>@Html.ActionLink("Trở về", "SupportIndex","", new { @class="uback"})</li>
                </ul>
            </td>
        </tr>
        <tr> 
            <th> Nhóm hỗ trợ</th>
            <td>@Html.DropDownList("GroupSupport", " === Chọn nhóm hỗ trợ === ")</td>
        </tr>
        <tr>
            <th>Tên người hỗ trợ</th>
            <td>@Html.TextBoxFor(model => model.Name, new { @class="text"})@Html.ValidationMessageFor(m=>m.Name)</td>
        </tr>
        <tr>
            <th>Số điện thoại </th>
           <td>@Html.TextBoxFor(model => model.Tel, new { @class="text"})@Html.ValidationMessageFor(m=>m.Tel)</td>
        </tr>
        <tr>
            <th>Kiểu nick</th>
            <td>@Html.DropDownList("Type")</td>
        </tr>
         <tr>
            <th>Nick</th>
            <td>@Html.TextBoxFor(model => model.Nick, new { @class="text"})@Html.ValidationMessageFor(m=>m.Nick)</td>
        </tr>
         <tr>
            <th>Thứ tự</th>
            <td>@Html.TextBoxFor(model => model.Ord, new { @class="text", @onkeypress="OnlyInputNumber(0)"})@Html.ValidationMessageFor(m=>m.Ord)</td>
        </tr>
         <tr>
            <th>Vị trí</th>
            <td>@Html.DropDownList("Location", new SelectList(new List<Object> { new { value = 0, text = "Khu vực miền Bắc" }, new { value = 1, text = "Khu vực miền Nam" } }, "value", "text", 0), new { @class="yesno"})</td>
        </tr>
        <tr>
            <th>Kích hoạt</th>
            <td>@Html.CheckBox("Actives")</td>
        </tr>

        <tr>
            <td class="Control" colspan="2"> 
                <ul>
                    @if (Session["Username"]!=null)
                    {
                        <li><input type="submit" value="Ghi lại "class="uupdate" /></li>
                    }
                    else{
                     <li><p class="uupdate" onclick="AlertErr()">Ghi lại</p></li>   
                    }
                    <li>@Html.ActionLink("Trở về", "SupportIndex","", new { @class="uback"})</li>
                </ul>
            </td>
        </tr>


    </table>
    
}
<script>
    $(function () {
        $("#SelectImages").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#Image").val(fileUrl);
            };
            finder.popup();
        });
    });
</script>

<script type="text/javascript">
    var editor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, {
            language: languageCode
        });
    }

    $(function () {
        createEditor('vi', 'Content');
        createEditor('vi', 'Detail');
    });
</script>
