@model DongHo.Models.NewsModel
@{
    ViewBag.Title = "Tạo mới tin tức";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table class="TableUpdate" border="1">
        <tr>
            <td class="Control" colspan="2"> 
                <ul>
                    @if (Request.Cookies["Username"] == null)
                    {
                        <li><p class="uupdate" onclick="AlertErr()">Ghi lại</p></li>  
                    }
                    else
                    {
                        <li><input type="submit" value="Ghi lại "class="uupdate" /></li>
                    }
                    <li>@Html.ActionLink("Trở về", "NewsIndex","", new { @class="uback"})</li>
                </ul>
            </td>
        </tr>
        <tr>
            <th>Nhóm tin</th>
            <td>@Html.DropDownList("GroupNewsId","Chọn nhóm tin")</td>
        </tr>
        <tr>
            <th>Tin tức mới</th>
            <td>@Html.TextBoxFor(model => model.Name, new { @class="text"})@Html.ValidationMessageFor(m=>m.Name)</td>
        </tr>
        <tr>
            <th>Hình ảnh</th>
           <td>@Html.TextBoxFor(model => model.Image, new { @class="text"})<input id="SelectImages" type="button" value="Chọn ảnh" class="bottom" /></td>
        </tr>
         <tr>
            <th>Nội dung</th>
            <td>@Html.TextArea("Content")</td>
        </tr>
        <tr>
            <th>Chi tiết</th>
            <td>@Html.TextArea("Detail")</td>
        </tr>
         <tr>
            <th>Title</th>
            <td>@Html.TextBoxFor(model => model.Title, new { @class="text"})</td>
        </tr>
         <tr>
            <th>Miêu tả</th>
            <td>@Html.TextBoxFor(model => model.Description, new { @class="text"})</td>
        </tr>
         <tr>
            <th>Từ khóa</th>
            <td>@Html.TextBoxFor(model => model.Keyword, new { @class="text"})</td>
        </tr>
        <tr>
            <th>Ưu tiên</th>
            <td>@Html.CheckBox("Priorities")</td>
        </tr>
         <tr>
            <th>Trang chủ</th>
            <td>@Html.CheckBox("Indexs")</td>
        </tr>
        <tr>
            <th>Kích hoạt</th>
            <td>@Html.CheckBox("Actives")</td>
        </tr>

        <tr>
            <td class="Control" colspan="2"> 
                <ul>
                    @if (Request.Cookies["Username"] == null)
                    {
                        <li><p class="uupdate" onclick="AlertErr()">Ghi lại</p></li>  
                    }
                    else
                    {
                        <li><input type="submit" value="Ghi lại "class="uupdate" /></li>
                    }
                    <li>@Html.ActionLink("Trở về", "NewsIndex","", new { @class="uback"})</li>
                </ul>
            </td>
        </tr>
    </table>
}
<script>
    $(function () {
        $("#SelectImages").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#Image").val(fileUrl);
            };
            finder.popup();
        });
    });
</script>

<script type="text/javascript">
    var editor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, {
            language: languageCode
        });
    }

    $(function () {
        createEditor('vi', 'Content');
        createEditor('vi', 'Detail');
    });
</script>
