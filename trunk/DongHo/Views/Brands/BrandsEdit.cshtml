@model DongHo.Models.Brand
@{
    ViewBag.Title = "Sửa thông tin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var username = User.Identity.IsAuthenticated ? User.Identity.Name : string.Empty;
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table class="TableUpdate" border="1">
        <tr>
            <td class="Control" colspan="2">
                <ul>
                    @if (Request.Cookies["Username"] == null)
                    {
                        <li><p class="uupdate" onclick="AlertErr()">Ghi lại</p></li>  
                    }
                    else
                    {
                        <li><input type="submit" value="Ghi lại "class="uupdate" /></li>
                      
                    }
                    <li>@Html.ActionLink("Trở về", "BrandsIndex","", new { @class="uback"})</li>
                </ul>
            </td>
        </tr>
        <tr>
            <th>Nhà cung cấp</th>
            <td>@Html.DropDownList("Supplier"," === Chọn nhà cung cấp === ")</td>
        </tr>
        <tr>
            <th>Thương hiệu</th>
            <td>@Html.TextBoxFor(model => model.Name, new { @class="text"})@Html.ValidationMessageFor(m=>m.Name)</td>
        </tr>
       <tr>
            <th>Logo</th>
             <td>@Html.TextBoxFor(model => model.Logo,new { @class="text"})@Html.ValidationMessageFor(m=>m.Logo)<input id="SelectImages" type="button" value="Chọn ảnh" class="bottom" /></td>
        </tr>
        <tr>
            <th>Thứ tự</th>
            <td>@Html.TextBoxFor(model => model.Ord, new { @onkeypress="OnlyInputNumber(0)"})@Html.ValidationMessageFor(m=>m.Ord)</td>
        </tr>
        <tr>
            <td class="Control" colspan="2">
                <ul>
                    @if (Request.Cookies["Username"] == null)
                    {
                        <li><p class="uupdate" onclick="AlertErr()">Ghi lại</p></li>  
                    }
                    else
                    {
                        <li><input type="submit" value="Ghi lại "class="uupdate" /></li>
                      
                    }
                    <li>@Html.ActionLink("Trở về", "BrandsIndex","", new { @class="uback"})</li>
                </ul>
            </td>
        </tr>
    </table>
}