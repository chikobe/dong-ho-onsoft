    <script type="text/javascript">
        function OnlyInputNumber(Characters) {
            var re;
            var ch = String.fromCharCode(event.keyCode);
            if (event.keyCode < 32) {
                return;
            };
            if ((event.keyCode <= 57) && (event.keyCode >= 48)) {
                if (!event.shiftKey) {
                    return;
                }
            }
            if (Characters.length > 0 && ch == Characters) {
                return;
            }
            event.returnValue = false;
        }
    </script>
